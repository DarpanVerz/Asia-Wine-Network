{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'template-collection.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- for block in section.blocks -%}
    {% if block.settings.tab_title != blank %}
        {% assign tab_title = true %}
    {% endif %}
{%- endfor -%}

<div
  class="color-{{ section.settings.color_scheme }} isolate gradient"
>
  <div
    class="tab-container page-width collection{% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %} section-{{ section.id }}-padding"
    id="collection-{{ section.id }}"
    data-id="{{ section.id }}"
  >
    <div class="title-wrapper-with-link title-wrapper--no-top-margin">
      {%- if section.settings.title != blank -%}
        <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}
      {% if tab_title %}
        <div class="tab-menu">
          {%- for block in section.blocks -%}
            <div class="tab-a{% if forloop.first %} active-a{% endif %}" data-id="tab{{ forloop.index }}">
              {{ block.settings.tab_title }}
            </div>
          {%- endfor -%}
        </div>
      {% endif %}
    </div>

    {%- for block in section.blocks -%}
    <div class="tab{% if forloop.first %} tab-active{% endif %}" data-id="tab{{ forloop.index }}">
        <div class="product-tab-swiper swiper product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %}">
            <div class="swiper-wrapper">
                {%- assign products = block.settings.collection.products -%}
                {% assign lazy_load = false %}
              {%- for product in products limit: section.settings.products_count -%}
                {% if lazy_load == false and forloop.index  %}
                    {% assign lazy_load = true %}
                {% endif %}
                <div class="swiper-slide">
                    {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    lazy_load: lazy_load,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    section_id: section.id,
                    quick_add: section.settings.quick_add
                    %}
                </div>
              {%- else -%}
                {%- for i in (1..section.settings.products_count) -%}
                    <div class="swiper-slide">
                    {% liquid
                        assign ridx = forloop.rindex
                        case ridx
                        when 5
                            assign ridx = 1
                        when 6
                            assign ridx = 2
                        endcase
                    %}
                    {%- assign placeholder_image = 'product-apparel-' | append: ridx -%}
                    {% render 'card-product',
                        show_vendor: section.settings.show_vendor,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        lazy_load: false,
                        placeholder_image: placeholder_image
                    %}
                </div>
                {%- endfor -%}
              {%- endfor -%}
            </div>
        </div>
        <div class="swiper-button-prev">
            <svg width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M-1.02073e-05 6.50802C-1.022e-05 6.79691 0.135583 7.0858 0.338973 7.27839L6.03389 12.671C6.50847 13.0883 7.22033 13.0883 7.66101 12.671C8.10169 12.2537 8.10169 11.5475 7.66101 11.1302L2.74575 6.47592L7.66101 1.8537C8.10169 1.43642 8.10169 0.730245 7.66101 0.312961C7.22033 -0.104322 6.47457 -0.104322 6.03389 0.312961L0.338973 5.73765C0.101685 5.93024 -1.01947e-05 6.21913 -1.02073e-05 6.50802Z" fill="currentColor"/></svg>
        </div>
        <div class="swiper-button-next">
            <svg width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7.9831 6.50802C7.9831 6.79691 7.84751 7.0858 7.64412 7.27839L1.9492 12.671C1.47463 13.0883 0.762764 13.0883 0.322086 12.671C-0.118592 12.2537 -0.118592 11.5475 0.322086 11.1302L5.23734 6.47592L0.322085 1.8537C-0.118593 1.43642 -0.118593 0.730245 0.322085 0.312961C0.762763 -0.104322 1.50853 -0.104322 1.9492 0.312961L7.64412 5.73765C7.88141 5.93024 7.9831 6.21913 7.9831 6.50802Z" fill="currentColor"/></svg>
        </div>
    </div>
    {%- endfor -%}
    
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sectionId = '{{ section.id }}';
    const sectionSelector = '#shopify-section-' + sectionId;
    const swiperInstances = {};
  
    const firstTab = document.querySelector(sectionSelector + ' .tab.tab-active');
    if (firstTab) {
      initAwardSwiper(firstTab);
    }
  
    const tabLinks = document.querySelectorAll(sectionSelector + ' .tab-a');
    tabLinks.forEach(function (link) {
      link.addEventListener('click', function () {
        const tabContainer = this.closest('.tab-container');
        const dataId = this.getAttribute('data-id');
        const targetTab = tabContainer.querySelector(`.tab[data-id="${dataId}"]`);
  
        tabContainer.querySelectorAll('.tab').forEach(tab => tab.classList.remove('tab-active'));
        targetTab.classList.add('tab-active');
  
        tabContainer.querySelectorAll('.tab-a').forEach(btn => btn.classList.remove('active-a'));
        this.classList.add('active-a');
  
        if (!swiperInstances[dataId]) {
          initAwardSwiper(targetTab, dataId);
        }

        $(tabContainer).find('.card .card__heading').matchHeight();

      });
    });
  
    function initAwardSwiper(tabEl, tabId = null) {
      const swiperContainer = tabEl.querySelector('.product-tab-swiper');
      const paginationEl = tabEl.querySelector('.swiper-pagination');
  
      if (!swiperContainer) return;
  
      const swiper = new Swiper(swiperContainer, {
        effect: 'slide',
        slidesPerView: 2,
        spaceBetween: 10,
        loop: false,
        loop: false,
        pagination: {
          el: paginationEl,
          clickable: true,
        },
        navigation: {
          nextEl: sectionSelector + ' .swiper-button-next',
          prevEl: sectionSelector + ' .swiper-button-prev',
        },
        breakpoints: {
          750: {
            slidesPerView: 3,
            spaceBetween: 15,
          },
          1200: {
            slidesPerView: 4,
            spaceBetween: 24,
          },
        }
      });
  
      if (tabId) {
        swiperInstances[tabId] = swiper;
      }
    }
  
  });
</script>

