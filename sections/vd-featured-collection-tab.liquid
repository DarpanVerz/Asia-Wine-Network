{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- for block in section.blocks -%}
    {% if block.settings.tab_title != blank %}
        {% assign tab_title = true %}
    {% endif %}
{%- endfor -%}

<div
  class="color-{{ section.settings.color_scheme }} isolate gradient"
>
  <div
    class="collection{% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %} section-{{ section.id }}-padding"
    id="collection-{{ section.id }}"
    data-id="{{ section.id }}"
  >
    <div class="collection__title title-wrapper title-wrapper--no-top-margin page-width">
      {%- if section.settings.title != blank -%}
        <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}
      {% if tab_title %}
      <div class="tab-menu-wrap">
        <div class="tab-menu">
          {%- for block in section.blocks -%}
            <div class="tab-a{% if forloop.first %} active-a{% endif %}" data-id="tab{{ forloop.index }}">
              {{ block.settings.tab_title }}
            </div>
          {%- endfor -%}
        </div>
      </div>
      {% endif %}
    </div>

    <div class="page-width">
        {%- for block in section.blocks -%}
        <div class="tab{% if forloop.first %} tab-active{% endif %}" data-id="tab{{ forloop.index }}">
      <div class="product-tab-swiper swiper product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %}">
            <div class="swiper-wrapper">
                
                {% assign lazy_load = false %}
              {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
                {% if lazy_load == false and forloop.index > max_columns_to_show %}
                    {% assign lazy_load = true %}
                {% endif %}
                <li class="swiper-slide">
                    {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    lazy_load: lazy_load,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    skip_styles: skip_card_product_styles,
                    section_id: section.id,
                    quick_add: section.settings.quick_add
                    %}
                </li>
                {%- assign skip_card_product_styles = true -%}
              {%- else -%}
                {%- for i in (1..section.settings.columns_desktop) -%}
                    <li class="swiper-slide">
                    {% liquid
                        assign ridx = forloop.rindex
                        case ridx
                        when 5
                            assign ridx = 1
                        when 6
                            assign ridx = 2
                        endcase
                    %}
                    {%- assign placeholder_image = 'product-apparel-' | append: ridx -%}
                    {% render 'card-product',
                        show_vendor: section.settings.show_vendor,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        lazy_load: false,
                        placeholder_image: placeholder_image
                    %}
                    </li>
                {%- endfor -%}
              {%- endfor -%}
        </div>
    </div>
    </div>
    {%- endfor -%}
    
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sectionId = '{{ section.id }}';
    const sectionSelector = '#shopify-section-' + sectionId;
    const swiperInstances = {};
  
    const firstTab = document.querySelector(sectionSelector + ' .tab.tab-active');
    if (firstTab) {
      initAwardSwiper(firstTab);
    }
  
    const tabLinks = document.querySelectorAll(sectionSelector + ' .tab-a');
    tabLinks.forEach(function (link) {
      link.addEventListener('click', function () {
        const tabContainer = this.closest('.tab-container');
        const dataId = this.getAttribute('data-id');
        const targetTab = tabContainer.querySelector(`.tab[data-id="${dataId}"]`);
  
        tabContainer.querySelectorAll('.tab').forEach(tab => tab.classList.remove('tab-active'));
        targetTab.classList.add('tab-active');
  
        tabContainer.querySelectorAll('.tab-a').forEach(btn => btn.classList.remove('active-a'));
        this.classList.add('active-a');
  
        if (!swiperInstances[dataId]) {
          initAwardSwiper(targetTab, dataId);
        }

        $(tabContainer).find('.product-card .product-card__title').matchHeight();

      });
    });
  
    function initAwardSwiper(tabEl, tabId = null) {
      const swiperContainer = tabEl.querySelector('.product-tab-swiper');
      const paginationEl = tabEl.querySelector('.swiper-pagination');
  
      if (!swiperContainer) return;
  
      const swiper = new Swiper(swiperContainer, {
        effect: 'slide',
        slidesPerView: 2,
        spaceBetween: 10,
        loop: false,
        loop: false,
        pagination: {
          el: paginationEl,
          clickable: true,
        },
        navigation: {
          nextEl: sectionSelector + ' .swiper-button-next',
          prevEl: sectionSelector + ' .swiper-button-prev',
        },
        breakpoints: {
          700: {
            slidesPerView: 3,
            spaceBetween: 15,
          },
          1150: {
            slidesPerView: 3,
            spaceBetween: 26,
          },
        },
        on: {
          afterInit: function () {
            centerSlidesIfNeeded(this);
          },
          resize: function () {
            centerSlidesIfNeeded(this);
          }
        }
      });
  
      if (tabId) {
        swiperInstances[tabId] = swiper;
      }
    }
  
    function centerSlidesIfNeeded(swiper) {
      const wrapper = swiper.el.querySelector('.swiper-wrapper');
      const totalSlides = swiper.slides.length;
  
      let slidesPerView = swiper.params.slidesPerView;
      let spaceBetween = swiper.params.spaceBetween;
  
      if (typeof slidesPerView === 'object') {
        const breakpoints = swiper.params.breakpoints;
        const width = window.innerWidth;
  
        slidesPerView = swiper.originalParams.slidesPerView;
        spaceBetween = swiper.originalParams.spaceBetween;
  
        const sorted = Object.keys(breakpoints).map(Number).sort((a, b) => a - b);
        sorted.forEach(bp => {
          if (width >= bp) {
            slidesPerView = breakpoints[bp].slidesPerView;
            spaceBetween = breakpoints[bp].spaceBetween;
          }
        });
      }
  
      if (totalSlides < slidesPerView) {
        wrapper.style.display = 'flex';
        wrapper.style.justifyContent = 'center';
        wrapper.style.marginLeft = (spaceBetween / 2) + 'px';
      } else {
        wrapper.style.display = '';
        wrapper.style.justifyContent = '';
        wrapper.style.marginLeft = '';
      }
    }
  });
</script>

